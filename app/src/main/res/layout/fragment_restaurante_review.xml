        app:layout_constraintTop_toBottomOf="@+id/imageViewSeparador1" />

    <ImageView
        android:id="@+id/imageViewSeparador2"
        android:layout_width="391dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:alpha="0.5"
        android:src="@drawable/retangulo_cinza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ListView
        android:id="@+id/listViewReviews"
        android:layout_width="393dp"
        android:layout_height="442dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSeparador2"
        app:layout_scrollFlags="scroll|enterAlways" />
</androidx.constraintlayout.widget.ConstraintLayout>