<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.PerfilFragment">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/gradient_splash_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewProfilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/gordon"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="10dp" />

    <Button
        android:id="@+id/buttonEditar"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/imageView1"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/imageViewProfilePic"
        android:background="@drawable/button_login"
        android:fontFamily="@font/montserrat_bold"
        android:stateListAnimator="@null"
        android:text="EDITAR"
        android:textColor="@color/branco"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewUtilizador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewProfilePic"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="Utilizador"
        android:textColor="@color/cinza"
        android:textSize="30sp" />

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/bottom_nav"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textViewUtilizador"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="0dp"
        android:elevation="16dp"
        android:padding="8dp"
        app:cnb_menuResource="@menu/middle_nav_perfil"
        app:layout_constraintBottom_toBottomOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bottom_nav"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>